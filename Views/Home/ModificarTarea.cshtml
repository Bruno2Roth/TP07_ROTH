@model TP07_ROTH.Models.Tarea
@{
    ViewData["Title"] = "Modificar Tarea";
}

<div class="container mt-4">
    <h2>Modificar Tarea</h2>

    <form method="post" asp-action="ModificarTarea">
        <input type="hidden" name="ID" value="@Model.ID" />

        <div class="mb-3">
            <label class="form-label">Título</label>
            <input type="text" class="form-control" name="Titulo" value="@Model.Titulo" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea class="form-control" name="Descripcion" required>@Model.Descripcion</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha</label>
            <input type="date" class="form-control" name="Fecha" value="@Model.Fecha.ToString("yyyy-MM-dd")" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Finalizada</label>
            <input type="checkbox" name="Finalizada" @(Model.Finalizada ? "checked" : "") />
        </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a class="btn btn-secondary" href="@Url.Action("VerTareas", "Home")">Cancelar</a>
    </form>
</div>
