@model TP07_ROTH.Models.Tarea
@{
    ViewData["Title"] = "Modificar Tarea";
}

<div class="container mt-4">
    <form action='@Url.Action("ModificarTareaGuardar", "Home")' method="POST">

        <h2>✏️ Modificar Tarea</h2>
        <input type="hidden" name="ID" value="@ViewBag.modificartarea.ID" />
        <div class="mb-3">
            <label class="form-label">📌 Título</label>
            <input type="text" name="Titulo" value="@ViewBag.modificartarea.Titulo" class="form-control" placeholder="Ingresa el título de la tarea" required/>
        </div>

        <div class="mb-3">
            <label class="form-label">📄 Descripción</label>
            <input type="textarea" name="Descripcion" value="@ViewBag.modificartarea.Descripcion" class="form-control" placeholder="Describe los detalles de la tarea" required/>
        </div>

        <div class="mb-3">
            <label class="form-label">📅 Fecha</label>
            <input type="date" name="Fecha" value="@ViewBag.modificartarea.Fecha.ToString("yyyy-MM-dd")" class="form-control" required/>
        </div>

        <div class="btn-container">
            <button type="submit" value = "Guardar" class="btn btn-success">💾 Guardar Cambios</button>
        </div>
    </form>
</div>
