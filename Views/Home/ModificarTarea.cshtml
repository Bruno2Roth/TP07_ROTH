@model TP07_ROTH.Models.Tarea
@{
    ViewData["Title"] = "Modificar Tarea";
}

<div class="container mt-4">
    <form asp-controller="Home" asp-action="ModificarTareaGuardar" method="post">

        <h2>✏️ Modificar Tarea</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <input type="hidden" asp-for="ID" />

        <div class="mb-3">
            <label class="form-label">📌 Título</label>
            <input asp-for="Titulo" class="form-control" required placeholder="Ingresa el título de la tarea" />
        </div>

        <div class="mb-3">
            <label class="form-label">📄 Descripción</label>
            <textarea asp-for="Descripcion" class="form-control" required placeholder="Describe los detalles de la tarea"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">📅 Fecha</label>
            <input asp-for="Fecha" type="date" class="form-control" required />
        </div>

        <div class="btn-container">
            <button type="submit" class="btn btn-success">💾 Guardar Cambios</button>
            <a class="btn btn-secondary" href="@Url.Action("VerTareas", "Home")">❌ Cancelar</a>
        </div>
    </form>
</div>
